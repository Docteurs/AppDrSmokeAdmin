<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrSmokeAppAdmin.Pages.ProduitDetail"
             Title="ProduitDetail">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <StackLayout>
            <Entry x:Name="nomProduitEntry" Placeholder="Nom du produit" />
            <Entry x:Name="descriptionEntry" Placeholder="Description" />

            <!-- Ajoutez d'autres Entry ou contrÃ´les de formulaire selon vos besoins -->

            <Button Text="Ajouter Produit" />
        </StackLayout>
    </VerticalStackLayout>
    
</ContentPage>